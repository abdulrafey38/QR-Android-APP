<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/bc2"
    >


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="194dp"
        android:layout_height="177dp"
        android:layout_marginTop="80dp"
        app:layout_constraintBottom_toTopOf="@+id/UserTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.159"
        app:srcCompat="@drawable/logo" />

    <Button
        android:background="@drawable/shapelogin"
        android:id="@+id/logbutton"
        android:layout_width="199dp"
        android:layout_height="47dp"
        android:backgroundTintMode="src_atop"
        android:backgroundTint="#39FFFFFF"
        android:text="LOG IN"
        android:textColor="#2a46b7"
        android:textSize="20sp"
        android:onClick="Login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pasTxt"
        app:layout_constraintVertical_bias="0.192" />


    <EditText
        android:id="@+id/pasTxt"
        android:layout_width="350dp"
        android:layout_height="42dp"
        android:background="@drawable/shapeemail"
        android:drawableLeft="@drawable/ic_action_pass"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserTxt"
        app:layout_constraintVertical_bias="0.11" />

    <EditText
        android:id="@+id/UserTxt"
        android:layout_width="350dp"
        android:layout_height="42dp"
        android:background="@drawable/shapeemail"
        android:drawableLeft="@drawable/ic_action_user"
        android:ems="10"
        android:hint="Email"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.545" />

</androidx.constraintlayout.widget.ConstraintLayout>
